<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66cccccc"
    tools:context="com.single.beeloadingview.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.library.beeloadingview.BeeLoadingView
            android:id="@+id/bl1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            custom:animate="colorFul"
            custom:change_duration="3000"
            custom:load_size="150" />

        <com.library.beeloadingview.BeeLoadingView
            android:id="@+id/bl11"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:animate="colorFul"
            custom:bitmapStyle="true"
            custom:change_duration="4000"
            custom:load_size="170" />

        <com.library.beeloadingview.BeeLoadingView
            android:id="@+id/bl2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:animate="rotate"
            custom:load_size="150" />

        <com.library.beeloadingview.BeeLoadingView
            android:id="@+id/bl22"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:animate="rotate"
            custom:bitmapStyle="true"
            custom:load_size="150" />

        <com.library.beeloadingview.BeeLoadingView
            android:id="@+id/bl3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:animate="colorArotate"
            custom:change_duration="5000"
            custom:load_size="170" />

        <com.library.beeloadingview.BeeLoadingView
            android:id="@+id/bl33"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:animate="colorArotate"
            custom:bitmapStyle="true"
            custom:change_duration="5000"
            custom:load_size="170" />
    </LinearLayout>


</ScrollView>
